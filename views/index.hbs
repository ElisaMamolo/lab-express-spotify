<div class="container">
    <img src="/images/spotify-background.jpeg" alt="bg image" style="width:100%;">
    <div class="centered">
        <form action="/artist-search" method="GET" class="form-inline">
            <div class="form-group mx-sm-3 mb-2">
                <label for="artist"></label>
                <input id="artist" type="text" name="artist" class="form-control" aria-describedby="emailHelp"
                    placeholder="Enter Artist">

            </div>
            <div class="form-group mx-sm-3 mb-2">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>

